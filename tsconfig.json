{
	"compilerOptions": {
		"target": "es2021",
		"module": "commonjs",
		"rootDir": "./src",
		"moduleResolution": "node",
		"baseUrl": "./src",
		"paths": {
			"#config/*": ["config/*"],
			"#helpers/*": ["helpers/*"]
		},
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true
	},
	"include": ["src/"]
}
