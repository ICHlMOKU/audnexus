{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "rootDir": "./src",
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "#config/*": ["config/*"],
            "#helpers/*": ["helpers/*"],
            "#interfaces/*": ["interfaces/*"],
            "#models/*": ["config/models/*"],
            "#papr": ["config/papr"],
            "#routes/*": ["config/routes/*"],
            "#typing/*": ["config/typing/*"]
        },
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    },
    "include": ["src/"]
}
